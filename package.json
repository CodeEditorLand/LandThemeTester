{
	"name": "theme-tester",
	"displayName": "Theme Tester",
	"version": "0.0.1",
	"private": false,
	"description": "Test a color theme without installing it",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"browser": "./dist/themeTesterMain.js",
	"scripts": {
		"chrome": "yarn compile && vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --folder-uri=vscode-theme-tester://m/",
		"compile": "webpack",
		"package": "webpack --mode production --devtool hidden-source-map",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"serve": "yarn compile && serve --cors -l 5000",
		"watch": "webpack --watch"
	},
	"contributes": {
		"commands": [
			{
				"command": "vscode-theme-tester.open",
				"title": "Theme Tester: Preview Theme"
			}
		],
		"resourceLabelFormatters": [
			{
				"formatting": {
					"label": "${path}",
					"separator": "/",
					"tildify": true,
					"workspaceSuffix": "Theme Tester Playground"
				},
				"scheme": "vscode-theme-tester"
			}
		]
	},
	"activationEvents": [
		"onFileSystem:vscode-theme-tester"
	],
	"devDependencies": {
		"@types/node": "18.x",
		"@types/vscode": "^1.82.0",
		"@types/webpack": "^5.28.3",
		"@vscode/test-web": "^0.0.46",
		"assert": "^2.1.0",
		"process": "^0.11.10",
		"request-light": "^0.7.0",
		"serve": "^14.2.1",
		"ts-loader": "^9.5.0",
		"typescript": "^5.2.2",
		"typescript-esbuild": "0.4.5",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	},
	"publishConfig": {
		"access": "public"
	}
}
